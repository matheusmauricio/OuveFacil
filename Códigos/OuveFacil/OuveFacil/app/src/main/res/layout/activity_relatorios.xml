<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="domain.view.Relatorios">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Relatórios"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonAvaliacaoPorBairro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exibir Avaliação por Bairro"
            android:onClick="avaliacaoPorBairro"/>

        <Button
            android:id="@+id/buttonDenunciasNaoConcluidas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Denúncias não Concluídas"
            android:onClick="denunciasNaoConcluidas"/>

        <Button
            android:id="@+id/buttonDenunciasConcluidas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Denúncias não Concluídas por Bairro"
            android:onClick="denunciasNaoConcluidasBairro"/>

        <Button
            android:id="@+id/buttonDenunciasConcluidasENaoConcluidas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Denúncias Concluídas e Não Concluídas por Bairro"
            android:onClick="denunciasConcluidasENaoConcluidas"/>

        <Button
            android:id="@+id/buttonVoltar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voltar"
            android:onClick="voltarTela"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
